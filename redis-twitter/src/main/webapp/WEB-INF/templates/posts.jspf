<div id="posts" class="span-15">
   <c:choose>
    	<c:when test="${empty posts}">
    	   <c:choose>
    	   	 <c:when test="${loggedIn}">
    	   	 	<i>You have no posts. Why not say hi to <a href="!${name}/reply/costinl/">@costinl</a> ?</i>
    	   	 </c:when>
    	   	 <c:otherwise>
    	   	 	<i>No posts.</i>
    	   	 </c:otherwise>
    	   </c:choose>
       </c:when>
	   <c:otherwise>
	   <%@ include file="/WEB-INF/templates/post.jspf" %>
	   </c:otherwise>
   </c:choose>
</div>